# Application
APP_NAME=VideoAdAnalysisPlatform
APP_ENV=development
DEBUG=true
SECRET_KEY=change-this-to-a-secure-random-string
API_V1_PREFIX=/api/v1

# Database
DATABASE_URL=postgresql+asyncpg://vaap:vaap_password@localhost:5432/vaap_db
DATABASE_URL_SYNC=postgresql://vaap:vaap_password@localhost:5432/vaap_db

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# MinIO / S3
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=vaap-storage
MINIO_USE_SSL=false

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# Whisper
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu

# YOLO
YOLO_MODEL_PATH=yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5

# EasyOCR
OCR_LANGUAGES=ja,en

# Video Processing
MAX_VIDEO_DURATION_SECONDS=600
FRAME_EXTRACTION_FPS=2
MAX_UPLOAD_SIZE_MB=500

# JWT Auth
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
